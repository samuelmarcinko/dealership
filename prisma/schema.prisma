generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─────────────────────────────────────────────────────────────────────────────
// Enums
// ─────────────────────────────────────────────────────────────────────────────

enum Role {
  ADMIN
  EDITOR
}

enum VehicleStatus {
  AVAILABLE
  RESERVED
  SOLD
}

enum FuelType {
  PETROL
  DIESEL
  ELECTRIC
  HYBRID
  LPG
  CNG
}

enum TransmissionType {
  MANUAL
  AUTOMATIC
  SEMI_AUTOMATIC
}

enum BodyType {
  SEDAN
  HATCHBACK
  ESTATE
  SUV
  COUPE
  CONVERTIBLE
  VAN
  PICKUP
  OTHER
}

// ─────────────────────────────────────────────────────────────────────────────
// Models
// ─────────────────────────────────────────────────────────────────────────────

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Vehicle {
  id             String           @id @default(cuid())
  title          String
  make           String
  model          String
  variant        String?
  year           Int
  price          Decimal          @db.Decimal(12, 2)
  mileage        Int
  fuelType       FuelType
  transmission   TransmissionType
  engineCapacity Int?
  power          Int?
  color          String?
  bodyType       BodyType?
  doors          Int?
  seats          Int?
  description    String?          @db.Text
  features       String[]
  slug           String?          @unique
  status         VehicleStatus    @default(AVAILABLE)
  externalId     String?          @unique
  importedAt     DateTime?
  images         VehicleImage[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  @@map("vehicles")
}

model VehicleImage {
  id        String   @id @default(cuid())
  vehicleId String
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  url       String
  isPrimary Boolean  @default(false)
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())

  @@map("vehicle_images")
}

model TenantSettings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tenant_settings")
}

model CustomPage {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  content     String   @db.Text
  isPublished Boolean  @default(false)
  showInNav   Boolean  @default(false)
  navOrder    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("custom_pages")
}
