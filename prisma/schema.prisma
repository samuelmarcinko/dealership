generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─────────────────────────────────────────────────────────────────────────────
// Enums
// ─────────────────────────────────────────────────────────────────────────────

enum Role {
  ADMIN
  EDITOR
}

enum VehicleStatus {
  AVAILABLE
  RESERVED
  SOLD
}

enum FuelType {
  PETROL
  DIESEL
  ELECTRIC
  HYBRID
  LPG
  CNG
}

enum TransmissionType {
  MANUAL
  AUTOMATIC
  SEMI_AUTOMATIC
}

enum BodyType {
  SEDAN
  HATCHBACK
  ESTATE
  SUV
  COUPE
  CONVERTIBLE
  VAN
  PICKUP
  OTHER
}

enum CustomerType {
  PERSON
  COMPANY
}

// ─────────────────────────────────────────────────────────────────────────────
// Models
// ─────────────────────────────────────────────────────────────────────────────

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Customer {
  id          String       @id @default(cuid())
  type        CustomerType @default(PERSON)
  // Fyzická osoba
  firstName   String?
  lastName    String?
  // Firma / Živnostník
  companyName String?
  ico         String?
  dic         String?
  icDph       String?
  // Spoločné
  phone       String?
  email       String?
  address     String?      @db.Text
  note        String?      @db.Text
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  vehicles    Vehicle[]

  @@map("customers")
}

model Vehicle {
  id             String           @id @default(cuid())
  title          String
  make           String
  model          String
  variant        String?
  year           Int
  price          Decimal          @db.Decimal(12, 2)
  salePrice      Decimal?         @db.Decimal(12, 2)
  mileage        Int
  fuelType       FuelType
  transmission   TransmissionType
  engineCapacity Int?
  power          Int?
  color          String?
  bodyType       BodyType?
  doors          Int?
  seats          Int?
  description     String?          @db.Text
  features        String[]
  safetyFeatures      String[]         @default([])
  comfortFeatures     String[]         @default([])
  multimediaFeatures  String[]         @default([])
  exteriorFeatures    String[]         @default([])
  otherFeatures       String[]         @default([])
  evFeatures          String[]         @default([])
  vin             String?
  slug           String?          @unique
  status         VehicleStatus    @default(AVAILABLE)
  externalId     String?          @unique
  importedAt     DateTime?
  // Predaj
  soldAt         DateTime?
  soldPrice      Decimal?         @db.Decimal(12, 2)
  soldNote       String?          @db.Text
  buyer          Customer?        @relation(fields: [buyerId], references: [id])
  buyerId        String?
  images         VehicleImage[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  @@map("vehicles")
}

model VehicleImage {
  id        String   @id @default(cuid())
  vehicleId String
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  url       String
  isPrimary Boolean  @default(false)
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())

  @@map("vehicle_images")
}

model DocumentTemplate {
  id           String   @id @default(cuid())
  name         String
  description  String?
  originalName String
  filePath     String
  isActive     Boolean  @default(true)
  sortOrder    Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("document_templates")
}

model EquipmentItem {
  id          String   @id @default(cuid())
  name        String
  category    String   // SAFETY | COMFORT | MULTIMEDIA | EXTERIOR | OTHER | EV
  subcategory String
  sortOrder   Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  @@map("equipment_items")
}

model TenantSettings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tenant_settings")
}

model CustomPage {
  id             String   @id @default(cuid())
  slug           String   @unique
  title          String
  content        String   @db.Text
  isPublished    Boolean  @default(false)
  showInNav      Boolean  @default(false)
  navOrder       Int      @default(0)
  seoTitle       String?
  seoDescription String?  @db.Text
  ogImage        String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("custom_pages")
}
